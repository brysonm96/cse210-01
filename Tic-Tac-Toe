import time

#def rowWin()

#def columnWin()

#def diagonalWin()

def main():
        one = "-"
        two = "-"
        three = "-"
        four = "-"
        five = "-"
        six = "-"
        seven = "-"
        eight = "-"
        nine = "-"
        finished = False


        while finished != True:

        #Player 1's turn
                print(one + " | " + two + " | " + three)
                print("---------")
                print(four + " | " + five + " | " + six)
                print("---------")
                print(seven + " | " + eight + " | " + nine)
                print(" ")

                print("Player 1 goes.")
                choice = input("Choose a number 1-9 to place your x: ")

        #change the game board
                if choice == "1" and one == "-":
                        one = "x"
                elif choice == "1" and one != "-":
                        print(" ")
                        print("That space is unavailable.")
                        print(" ")
                        time.sleep(1)
                ###########################################

                if choice == "2" and two == "-":
                        two = "x"
                elif choice == "2" and two != "-":
                        print(" ")
                        print("That space is unavailable.")
                        print(" ")
