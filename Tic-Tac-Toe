        #Check for a win (ROW)
                if one == two == three and one == "x":
                        print("Player 1 wins!")
                        finished = True
                        exit()
                if four == five == six and four == "x":
                        print("Player 1 wins!")
                        finished = True
                        exit()
                if seven == eight == nine and seven == "x":
                        print("Player 1 wins!")
                        finished = True
                        exit()
        #Check for a win (COLUMN)
                if one == four == seven and one == "x":
                        print("Player 1 wins!")
                        finished = True
                        exit()
